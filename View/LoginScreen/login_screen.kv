<LoginScreenView>:
    md_bg_color: (1,1,1,1)
    name:'login screen'
    # the main container for all the widgets
    MDBoxLayout:
        orientation: 'horizontal'
        # left box for user credentials
        MDBoxLayout:
            orientation: 'vertical'
            MDFloatLayout:
                # md_bg_color: (0,1,0,1) 
                            # adaptive_height: True
                MDBoxLayout:
                    orientation: 'vertical'
                    size_hint: (.8,.5)
                    pos_hint: {'x':.1, 'y':.3 }
                    md_bg_color: (1,1,1,1)
                    spacing: '10dp'
                    
                    # text boxlayout
                    MDBoxLayout:
                        orientation: 'vertical'
                        # size_hint_y: None
                        size_hint: (.6,1)
                        pos_hint: {'x':.2 , 'y':0 }
                        MDIcon:
                            icon: 'account'
                            adaptive_height: True
                        # Image:
                        #     source: "Assets\Images\j.png"
                        #     allow_stretch:True
                        #     adaptive_height: True
                        MDLabel:
                            text: 'Login to ABMS'
                            theme_text_color: 'Custom'
                            text_color: (0,0,1,1) 
                            adaptive_height: True
                            font_style: "Title"
                            role: "medium"
                        MDLabel:
                            adaptive_height: True
                            text: 'Manage your business well, bost your profit and have an accurate record of every thing.'
                    # fields boxlayout
                    MDBoxLayout:
                        orientation: 'vertical'
                        size_hint: (.6,1)
                        pos_hint: {'x':.2 , 'y':0 }
                        # size_hint: (None,None)
                        adaptive_height: True
                        spacing: '20dp'
                        
                        # pos_hint: {'x':.3 , 'y':0 }
                        MDTextField:
                            mode:'outlined'
                            multiline: False
                            
                            # size_hint_x: 1
                            MDTextFieldHintText:
                                text: "user name"
                                text_color_normal: "gray"
                        MDTextField:
                            multiline: False
                            mode:'outlined'
                            password: True
                            # icon_right: 'eye'
                            MDTextFieldHintText:
                                text: "password"
                                text_color_normal: "gray"
                            MDTextFieldLeadingIcon:
                                icon: 'account'
                                icon_color: (1,1,0,1)
                                
                            
                           
                                
                                
                        MDButton:
                            theme_width: "Custom"
                            style: "filled"
                            size_hint_x: 1
                            theme_shadow_color: "Custom"
                            shadow_color: "red"

                            MDButtonText:
                                text: "Log in"
                                theme_text_color: "Custom"
                                text_color: "white"
                                pos_hint: {"center_x": .5, "center_y": .5}
                        MDButton:
                            style: 'text'
                            MDButtonText:
                                text: 'Fogot password?'
                                adaptive_height: True
                                adaptive_width: True
                                theme_text_color: 'Custom'
                                text_color: (0,0,1,1) 
                            

                    
               
                
            
        # right box for the app info
        MDBoxLayout:
            md_bg_color: (1,1,0,1)
            orientation: 'vertical'
        

        